# The primary network interface
iface {{ os_prepare_physical_interface }} inet manual

auto {{ os_prepare_bridge_interface }}
iface {{ os_prepare_bridge_interface }} inet static
    bridge_ports {{ os_prepare_physical_interface }}
    bridge_stp off
    bridge_fd 0
    bridge_maxwait 0
    address {{ os_prepare_ipv4_address }}
    broadcast {{ os_prepare_ipv4_broadcast }}
    netmask {{ os_prepare_ipv4_netmask }}
    gateway {{ os_prepare_ipv4_gateway }}
