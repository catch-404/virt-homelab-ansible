# Direct connection interface
auto {{ ip_direct_setup_physical_interface }}
iface {{ ip_direct_setup_physical_interface }} inet static
    mtu 9000
    address {{ ip_direct_setup_ipv4_address }}
    netmask {{ ip_direct_setup_ipv4_netmask }}
    up ip route add {{ ip_direct_setup_remote_local_ip }}/32 via {{ ip_direct_setup_remote_direct_ip }} dev {{ ip_direct_setup_physical_interface }}
    down ip route del {{ ip_direct_setup_remote_local_ip }}/32 || true
